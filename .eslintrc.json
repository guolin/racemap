{
  "extends": ["next", "eslint:recommended"],
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "rules": {
    "max-lines": ["error", {"max": 300, "skipBlankLines": true, "skipComments": true}],
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }]
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "globals": {
    "NodeJS": "readonly",
    "GeolocationPosition": "readonly",
    "GeolocationCoordinates": "readonly",
    "GeolocationPositionError": "readonly",
    "PositionOptions": "readonly"
  },
  "overrides": [
    {
      "files": ["app/manual/page.tsx"],
      "rules": {
        "max-lines": "off"
      }
    },
    {
      "files": ["src/features/map/RaceMap.tsx"],
      "rules": {
        "max-lines": "off"
      }
    },
    {
      "files": ["src/features/map/components/CourseSettingsDrawer.tsx"],
      "rules": {
        "max-lines": "off"
      }
    }
  ]
} 